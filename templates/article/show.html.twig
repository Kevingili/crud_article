{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {% for tag in article.tags %}
                        <span class="badge badge-primary">{{ tag.name }}</span><br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning">edit</a>

    <br><br>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
